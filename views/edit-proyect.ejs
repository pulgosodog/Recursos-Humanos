<%- include('partials/header', { titulo: 'Dashboard de Proyectos' }) %>
<div class="project-edit">
    <form action="/editar-proyecto/<%= proyecto.id %>" method="POST">
      <label for="nombre">Nombre del Proyecto</label>
      <input type="text" name="nombre" value="<%= proyecto.nombre %>">
  
      <label for="descripcion">Descripci√≥n</label>
      <textarea name="descripcion"><%= proyecto.descripcion %></textarea>
  
      <label for="presupuesto">Presupuesto</label>
      <input type="number" name="presupuesto" value="<%= proyecto.presupuesto %>">
  
      <label for="fecha_entrega">Fecha de Entrega</label>
      <input type="date" name="fecha_entrega" value="<%= proyecto.fecha_entrega %>">
  
      <label for="empleados">Asignar Empleados</label>
      <select name="empleados" multiple>
        <% empleados.forEach(e => { %>
          <option value="<%= e.id %>" <%= Array.isArray(proyecto.empleados_asignados) && proyecto.empleados_asignados.includes(e.id) ? 'selected' : '' %>><%= e.nombre %></option>
        <% }); %>
      </select>
  
      <button type="submit">Guardar Cambios</button>
    </form>
  </div>
<%- include('partials/footer') %>