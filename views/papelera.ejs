<%- include('partials/header', { titulo: 'Dashboard de Proyectos' }) %>

<div style="margin-bottom: 1rem;">
  <a href="/proyectos" class="btn btn-danger">Regresar a proyectos activos</a>
</div>

<h2>Proyectos en papelera</h2>

<div class="tarjetas">
<% proyectos = proyectos.filter(p => p.papelera === 1); %>
  <% if (proyectos.length > 0) { %>
    <% proyectos.forEach(p => { %>
      <div class="tarjeta">
        <h3><%= p.nombre %></h3>
        <p><strong>Presupuesto:</strong> $<%= p.presupuesto %></p>
        <p><strong>Entrega:</strong> <%= p.fecha_entrega %></p>
        <p><strong>Descripción:</strong> <%= p.descripcion %></p>
        <p><strong>Empleados Asignados:</strong></p>
        <ul>
          <% if (p.empleados && p.empleados.length > 0) { %>
            <% p.empleados.forEach(e => { %>
              <li><%= e.nombre %></li>
            <% }); %>
          <% } else { %>
            <li>No hay empleados asignados</li>
          <% } %>
        </ul>

        <div class="acciones">
          <a href="/proyectos/editar/<%= p.id %>" class="btn btn-editar">Editar</a>
          <a href="/proyectos/papelera/<%= p.id %>" class="btn btn-papelera">Restaurar</a>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>No hay proyectos registrados todavía.</p>
  <% } %>
</div>


<%- include('partials/footer') %>
